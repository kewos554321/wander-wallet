generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  name          String?
  password      String? // 加密後的密碼，OAuth 用戶為 null
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts            Account[]
  sessions            Session[]
  createdProjects     Project[]           @relation("ProjectCreator")
  projectMemberships  ProjectMember[]
  paidExpenses        Expense[]           @relation("ExpensePayer")
  expenseParticipants ExpenseParticipant[] @relation("ExpenseParticipant")

  @@map("users")
}

model Account {
  id                String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String  @map("user_id") @db.Uuid
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 旅行專案（項目）
model Project {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String    // 專案名稱
  description String?   // 描述
  startDate   DateTime? @map("start_date") // 出發日期
  endDate     DateTime? @map("end_date")   // 結束日期
  shareCode   String    @unique @map("share_code") // 分享碼，用於邀請其他用戶
  createdBy   String    @map("created_by") @db.Uuid // 創建者
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  creator    User             @relation("ProjectCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  members    ProjectMember[]  // 專案成員
  expenses   Expense[]        // 費用記錄

  @@map("projects")
}

// 專案成員（多對多關係）
model ProjectMember {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId String   @map("project_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  role      String   @default("member") // owner, member
  joinedAt  DateTime @default(now()) @map("joined_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId]) // 確保每個用戶在同一專案中只有一條記錄
  @@map("project_members")
}

// 費用記錄
model Expense {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId   String   @map("project_id") @db.Uuid
  paidBy      String   @map("paid_by") @db.Uuid // 付款人
  amount      Decimal  @db.Decimal(10, 2) // 總金額
  description String?  // 描述（如：午餐、交通費）
  category    String?  // 分類
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  project       Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  payer         User                 @relation("ExpensePayer", fields: [paidBy], references: [id], onDelete: Cascade)
  participants  ExpenseParticipant[] // 費用參與者

  @@map("expenses")
}

// 費用參與者（表示哪些人應該分擔這筆費用）
model ExpenseParticipant {
  id         String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  expenseId  String  @map("expense_id") @db.Uuid
  userId     String  @map("user_id") @db.Uuid
  shareAmount Decimal @map("share_amount") @db.Decimal(10, 2) // 應該分擔的金額

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  user    User    @relation("ExpenseParticipant", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([expenseId, userId]) // 確保每個用戶在同一筆費用中只有一條記錄
  @@map("expense_participants")
}
