// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  lineUserId    String    @unique @map("line_user_id")
  email         String?
  name          String?
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  createdProjects     Project[]           @relation("ProjectCreator")
  projectMemberships  ProjectMember[]

  @@map("users")
}

// 旅行專案（項目）
model Project {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?
  cover       String?   // 封面圖片：preset:1-6 或 base64 data URL
  budget      Decimal?  @db.Decimal(12, 2) // 預算金額
  startDate   DateTime? @map("start_date")
  endDate     DateTime? @map("end_date")
  joinMode    String    @default("both") @map("join_mode") // 加入模式：create_only, claim_only, both
  memo        String?   @db.Text // 共享備忘錄
  createdBy   String    @map("created_by") @db.Uuid
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  creator       User             @relation("ProjectCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  members       ProjectMember[]
  expenses      Expense[]
  activityLogs  ActivityLog[]

  @@index([createdBy])
  @@map("projects")
}

// 專案成員（多對多關係）
model ProjectMember {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId   String    @map("project_id") @db.Uuid
  userId      String?   @map("user_id") @db.Uuid
  displayName String    @map("display_name")
  role        String    @default("member")
  joinedAt    DateTime  @default(now()) @map("joined_at")
  claimedAt   DateTime? @map("claimed_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  paidExpenses        Expense[]            @relation("ExpensePayer")
  deletedExpenses     Expense[]            @relation("ExpenseDeleter")
  expenseParticipants ExpenseParticipant[] @relation("ExpenseParticipant")
  activityLogs        ActivityLog[]        @relation("ActivityActor")

  @@index([projectId])
  @@index([userId])
  @@unique([projectId, userId])
  @@map("project_members")
}

// 費用記錄
model Expense {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId   String   @map("project_id") @db.Uuid
  paidByMemberId String @map("paid_by_member_id") @db.Uuid
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  category    String?
  image       String?  @db.Text // 收據/消費圖片：base64 data URL
  location    String?  // 消費地點地址
  latitude    Decimal? @db.Decimal(10, 7) // 緯度
  longitude   Decimal? @db.Decimal(10, 7) // 經度
  expenseDate DateTime @default(now()) @map("expense_date")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at") // 軟刪除時間
  deletedByMemberId String? @map("deleted_by_member_id") @db.Uuid // 刪除者

  project       Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  payer         ProjectMember        @relation("ExpensePayer", fields: [paidByMemberId], references: [id], onDelete: Cascade)
  deletedBy     ProjectMember?       @relation("ExpenseDeleter", fields: [deletedByMemberId], references: [id], onDelete: SetNull)
  participants  ExpenseParticipant[]

  @@index([projectId])
  @@index([paidByMemberId])
  @@index([projectId, createdAt(sort: Desc)])
  @@index([projectId, deletedAt])
  @@map("expenses")
}

// 費用參與者
model ExpenseParticipant {
  id         String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  expenseId  String  @map("expense_id") @db.Uuid
  memberId   String  @map("member_id") @db.Uuid
  shareAmount Decimal @map("share_amount") @db.Decimal(10, 2)

  expense Expense       @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  member  ProjectMember @relation("ExpenseParticipant", fields: [memberId], references: [id], onDelete: Cascade)

  @@index([memberId])
  @@unique([expenseId, memberId])
  @@map("expense_participants")
}

// 操作歷史紀錄
model ActivityLog {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId     String   @map("project_id") @db.Uuid
  actorMemberId String?  @map("actor_member_id") @db.Uuid
  entityType    String   @map("entity_type")  // expense, project, member
  entityId      String   @map("entity_id") @db.Uuid
  action        String   // create, update, delete
  changes       Json?    // 變更前後差異
  createdAt     DateTime @default(now()) @map("created_at")

  project Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  actor   ProjectMember? @relation("ActivityActor", fields: [actorMemberId], references: [id], onDelete: SetNull)

  @@index([projectId, createdAt(sort: Desc)])
  @@index([entityType, entityId])
  @@map("activity_logs")
}

